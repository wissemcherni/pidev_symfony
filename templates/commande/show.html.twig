{% extends 'basefront.html.twig' %}

{% block title %}Commande{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title">Détails de la commande</h3>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>IdCommande</th>
                                    <td>{{ commande.idCommande }}</td>
                                </tr>
                                <tr>
                                    <th>NumPanier</th>
                                    <td>{{ commande.numPanier }}</td>
                                </tr>
                                <tr>
                                    <th>Emetteur</th>
                                    <td>{{ commande.emetteur }}</td>
                                </tr>
                                <tr>
                                    <th>Depot</th>
                                    <td>{{ commande.depot }}</td>
                                </tr>
                                <tr>
                                    <th>Statut</th>
                                    <td>{{ commande.statut }}</td>
                                </tr>
                                <tr>
                                    <th>Type</th>
                                    <td>{{ commande.type }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">Retour à la liste</a>
                        <a href="{{ path('app_commande_edit', {'idCommande': commande.idCommande}) }}" class="btn btn-warning">Modifier</a>
                        {{ include('commande/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
